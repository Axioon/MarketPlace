ALTER TABLE pedido
ADD CONSTRAINT fk_pedido_articulo
FOREIGN KEY (articulo_id) REFERENCES articulo(id)
ON DELETE CASCADE;

ALTER TABLE detalle_pedido
ADD CONSTRAINT fk_detallepedido_articulo
FOREIGN KEY (articulo_id) REFERENCES articulo(id)
ON DELETE CASCADE;
